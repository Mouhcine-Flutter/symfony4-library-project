{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
  <div class="container mt-5">
      <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <header class="card-header">
                        <h4 class="card-title mt-2 text-center">Inscription</h4>
                    </header>
                    <article class="card-body">
                        {{ form_start(registrationForm) }}
                            <div class="form-group">
                                {{ form_row(registrationForm.email) }}
                            </div> <!-- form-group end.// -->
                            <div class="form-group">
                                {{ form_row(registrationForm.password, {label: 'Password'}) }}
                            </div> <!-- form-group end.// -->
                            <div class="form-group mt-5">
                                <button type="submit" class="btn btn-primary btn-block btn-lg"> S'inscrire  </button>
                            </div> <!-- form-group// -->
                            <small class="text-muted">En cliquant sur s'inscrire, vous acceptez les conditions générales d'utilisation et de vie privée.</small>
                        {{ form_end(registrationForm) }}
                    </article> <!-- card-body end .// -->
                </div> <!-- card.// -->
            </div> <!-- col.//-->
        </div> <!-- row.//-->
    </div><!--container end.//-->
{% endblock %}

