{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container mt-4">
    <form class="form-signin" method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Veuillez vous authentifier</h1>
        <label for="email">Email</label>
        <input type="email" name="_username" id="email" class="form-control" required autofocus>
        <label for="password">Password</label>
        <input type="password" name="_password" id="password" class="form-control" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        <br>
        <button class="btn btn-lg btn-primary" type="submit">
            S'identifier
        </button>
    </form>
</div>
{% endblock %}
