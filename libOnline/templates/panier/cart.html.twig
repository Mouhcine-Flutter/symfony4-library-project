{% extends 'base.html.twig' %}

{% block body %}
    <div class="container py-5">
        <div class="row">
            <h1>Panier</h1>
        </div>
        <div class="row">
            {% if cartItems | length > 0 %}
                <table class="table">
                    <thead>
                    <tr>
                        <th>Livre</th>
                        <th>Prix</th>
                        <th>Quantité</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {%  for item in cartItems %}
                        <tr>
                            <td>{{ item.livre.titre }}</td>
                            <td>{{ item.livre.prix }} €</td>
                            <td>{{ item.quantity }}</td>
                            <td>{{ item.livre.prix * item.quantity }} €</td>
                            <td class="text-right">
                                <a href="{{ path('cart_remove', {'livreId': item.livre.id}) }}" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="3" class="text-right">Total : </th>
                            <th>{{ totalPanier }} €</th>
                            <td class="text-right"><button type="button" class="btn btn-success">Passer commande</button></td>
                        </tr>
                    </tfoot>
                </table>
            {% else %}
                <p>Votre panier est tristement vide :(</p>
            {% endif %}
        </div>
    </div>
{% endblock %}