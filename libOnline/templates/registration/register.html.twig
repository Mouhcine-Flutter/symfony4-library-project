{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
  <div class="container">
    <h1>Inscription</h1>
      <form>
          {{ form_start(registrationForm) }}
          <div class="form-row">
              <div class="form-group md-6">
                  {{ form_row(registrationForm.email) }}
              </div>
              <div class="form-group md-6">
                  {{ form_row(registrationForm.password, {label: 'password'}) }}
              </div>
          </div>
          <div class="form-row">
              <div class="form-group md-6">
                  {{ form_row(registrationForm.nom, {label: 'nom'}) }}
              </div>
              <div class="form-group md-6">
                  {{ form_row(registrationForm.prenom, { label: 'prenom'}) }}
              </div>
          </div>
          <div class="form-group">
              {{ form_row(registrationForm.adresse, { label: 'adresse'}) }}
          </div>
          <div class="form-row">
              <div class="form-group md-6">
                  {{ form_row(registrationForm.ville, {label: 'ville'}) }}
              </div>
              <div class="form-group md-2">
                  {{ form_row(registrationForm.codepostal, {label: 'codepostal'}) }}
              </div>
              <div class="form-group md-4">
                  {{ form_row(registrationForm.tel, {label: 'tel'}) }}
              </div>
          </div>
          <button type="submit" class="btn btn-primary">S'inscrire</button>
          {{ form_end(registrationForm) }}
      </form>
  </div>
{% endblock %}
